{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded"
		}
	},
	"overrides": [
		{
		"include": [
			"next.config.js",
			"layout.tsx",
			"page.tsx",
			"loading.tsx",
			"error.tsx",
			"not-found.tsx"
		],
		"linter": {
			"rules": {
				"style": {
					"noDefaultExport": "off"
				}
			}
		}
		}
	]
}
